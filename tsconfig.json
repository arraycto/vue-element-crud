{
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "es5",
    "noImplicitThis": true,
    "module": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": true
  }
}
